{
  "manifest_version": 2,
  "name": "Homepage",
  "version": "1.0.0",
  "description": "A customizable new tab page with button grid, groups, and folders",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Homepage"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "homepage@extension.local"
    }
  }
}
