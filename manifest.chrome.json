{
  "manifest_version": 3,
  "name": "Homepage",
  "version": "1.0.0",
  "description": "A customizable new tab page with button grid, groups, and folders",
  "default_locale": "en",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "添加到主页",
    "default_popup": "popup.html"
  }
}
