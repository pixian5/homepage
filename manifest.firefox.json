{
  "manifest_version": 2,
  "name": "我的首页",
  "version": "1.8",
  "description": "自定义新标签页",
  "browser_action": {
    "default_title": "新标签页",
    "default_popup": "popup.html"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "history",
    "<all_urls>",
    "https://www.bing.com/*",
    "https://www.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content-toast.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "js/*.js"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; img-src 'self' data: https: http:;",
  "browser_specific_settings": {
    "gecko": {
      "id": "newtab@example.com",
      "strict_min_version": "91.0"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
